@font-face {
    font-family: 'abel';
    src: url('abel-regular-webfont.eot');
    src: url('abel-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('abel-regular-webfont.woff') format('woff'),
         url('abel-regular-webfont.ttf') format('truetype'),
         url('abel-regular-webfont.svg#abelregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'bebas';
    src: url('bebasneue-webfont.eot');
    src: url('bebasneue-webfont.eot?#iefix') format('embedded-opentype'),
         url('bebasneue-webfont.woff') format('woff'),
         url('bebasneue-webfont.ttf') format('truetype'),
         url('bebasneue-webfont.svg#bebas_neueregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

$main_w = 1020px;
$content_p = 121px;

$blue = #008DC2;
$light_blue = #6DAED4;
$green = #A8D27A;
$light_bg = #e0e0e0;
$text_c = #3F2006;

$f_normal = 15px;
$f_big = 21px;
$f_large = 28px;
$f_huge = 36px;
$f_small = 13px;

font($fs, $c) {
    font-size: $fs unless @font-size;
    color: $c unless @color;
}

abel($f, $c) {
    font-family: Abel, Verdana, sans-serif;
    font: $f $c;
}

bebas($f, $c) {
    font-family: Bebas, Verdana, sans-serif;
    font-weight: 200;
    font: $f $c;
}

content_block() {
    padding-top: 56px;
    padding-bottom: 56px;
    padding-left: $content_p;
    padding-right: $content_p;
}

clear() {
    &:before, &:after {
        content: "";
        display: table;
    }
    &:after {
        clear: both;
    }
    *zoom: 1;
}

body {
    background-color: $light_bg;
    width: 100%;
    text-align: center;
    abel: $f_normal, $text_c;
}

a {
    text-decoration: none;
    color: $blue;
    &:active {
        color: @color;
    }
    &:visited {
        color: @color;
    }
}

h1 {
    $h1_h = 40px;
    padding: 0px;
    margin: 0px;
    margin-bottom: 40px;
    bebas: $h1_h $blue;
    text-transform: uppercase;
    height: $h1_h;
    position: relative;

    .text {
        position: absolute;
        z-index: 1;
        top: 0px;
        left: 0px;
        padding-right: 15px;
        background-color: #fff;
    }

    .headLine {
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        border-bottom: 1px solid $blue;
        font-size: 50%;
    }
}

h2 {
    abel: $f_large $blue;
    padding: 0px;
    margin: 0px;
    margin-bottom: 15px;
}

p, .reg {
    abel: $f_large $text_c;
    margin: 15px 0px;
    line-height: 1.2em;
}

p.mid {
    font-size: $f_big;
}


#main {
    margin: 0px auto;
    width: $main_w;
    $border = 1px solid #aaa;
    border-left: $border;
    border-right: $border;
    border-bottom: $border;
    text-align: left;
    background-color: #fff;

    header {
        background-color: #008DC2;
        position: relative;
        height: 486px;

        #headerBg {
            position: absolute;
        }

        #presents {
            position: absolute;
            top: 52px;
            left: 124px;
            bebas: $f_big #fff;
            text-transform: uppercase;
        }

        #title {
            position: absolute;
            top: 120px;
            left: 120px;
            color: #fff;

            #titleThe {
                font-size: $f_big * 1.2;
            }

            a#titleMobileSummit {
                font-size: 70px;
                line-height: @font-size * 0.8;
                text-decoration: none;
                color: #fff;
            }

            #titleInfo {
                bebas: ($f_big * 1.3) none;
                color: $green;

                span {
                    color: #fff;
                }
            }
        }

        a#registerNow {
            position: absolute;
            display: block;
            text-decoration: none;
            top: 167px;
            left: 768px;
            padding-top: 47px;
            padding-bottom: 42px;
            bebas: 40px #fff;
            text-align: center;
            width: 116px;
            line-height: @font-size * 1.2;
            &:hover {
                color: $blue;
            }

            #regNowTop {
            }

            #regNowBottom {
                font-size: 65px;
            }
        }

        a#homePage {
            position:absolute;
            background: url('/images/clear.png') repeat-both;
            width: 460px;
            height: 222px;
            top: 78px;
            left: 196px;
            position: absolute;
        }

        .menuBar {
            position: absolute;
            top: 436px;
        }

    }

}

footer {
    #footerTop {
        height: 47px;
        background-color: $blue;
        content_block();
        padding-top: 5px;
        padding-bottom: @padding-top;
        clear();
        $m = 17px;

        .footerTag {
            float: left;
            bebas: 40px $light_blue;
            margin-right: $m;
            position: relative;
            top: -4px;
        }

        img {
            float: left;
            margin-right: $m;
            position: relative;
            top: 12px;
        }

        a.footerTag {
            float: right;
            color: #fff;
            margin-right: 0px;
            &:hover {
                color: $green;
            }
        }
    }

    #footerBottom {
        height: 137px;
        background-color: $green;

        .menuBar {
            padding-top: 25px;
        }
    }
}

#content {
    content_block();
}

.menuBar {
    clear();
    content_block();
    padding-top: 10px;
    padding-bottom: 10px;
    height: 32px;
    width: 1020px - (@padding-left * 2);

    .hashTag {
        float: left;
        abel: 20px #fff;
        position: relative;
        left: -10px;

        img {
            position: relative;
            top: -4px;
        }

        a {
            color: #fff;
        }
    }

    a.menuLink {
        display: block;
        float: right;
        abel: $f_small $text_c;
        font-weight: bold;
        margin-left: 15px;
        position: relative;
        top: 8px;
        &:hover {
            color: #fff;
        }
    }

}

.mobileFuture, .whyWeGather {
    height: 272px;
    h2 {
        font-weight: normal;
    }
    img {
        margin-right: 22px;
    }
}

.whyWeGather {
    h2 {
        bebas: $f_big*1.2 $blue;
    }

    p {
        font-size: $f_big;
    }
}

.whatYouGet {
    margin-bottom: 30px;
    clear();
    img {
        float: left;
        margin-right: 40px;
    }
    .info {
        float: left;
        width: 325px;
        font-size: $f_large * 0.8;
    }
}

.venue {
    width: 620px;
    margin: 0px auto;
    clear();

    .map {
        clear();
        margin-bottom: 30px;

        img {
            float: left;
            display: block;
            margin-right: 30px;
        }

        p {
            display: block;
            float: left;
            width: 375px;
        }
    }

    img.terra {
        display: block;
    }

    .actions {
        clear();
        margin-top: 10px;
        margin-bottom: 30px;
    }

    a.action {
        text-align: center;
        float: left;
        display: block;
        color: $text_c;
        font-size: $f_big;
        position: relative;
        width: 83px;
        height: 100px;
        margin: 30px 15px;
        padding: 0px 20px;

        img {
        }

        div {
            width: 100%;
            position: absolute;
            top: 85px;
            left: 0px;
        }

        &:hover {
            div {
                color: $blue;
            }
        }
    }

    .infoSec {
        margin: 30px 0px;
        clear()

        img {
            float: left;
            margin-right: 54px;
            margin-left: 30px;
        }

        .info {
            float: left;
            width: 450px;

            .infoTitle {
                bebas: $f_big $blue;
            }

            .infoDesc {
            }
        }
    }
}

.sponsors {
    clear();

    a {
        display: block;
        float: left;
        margin-right: 22px;

        &.last {
            margin-right: 0px;
        }
    }

    img {
        height: 34px;
    }
}

.speakers, .organizers {
    clear();
    $speaker_w = 210px;
    $speaker_p = 15px;
    $strip_w = ($speaker_w * 3) + ($speaker_p * 4);
    $control_w = ($main_w - ($content_p * 2) - $strip_w) / 2;
    margin-top: 10px;
    margin-bottom: 40px;

    .speakerLeft, .speakerRight {
        float: left;
        width: $control_w;
        text-align: center;
        position: relative;

        a {
            position: absolute;
            top: 85px;
            right: 0px;
        }
    }

    .speakerLeft a {
        left: 0px;
        right: auto;
    }

    .speakerStripCont {
        width: $strip_w;
        position: relative;
        height: 280px;
        overflow: hidden;
        float: left;
        margin: 20px 0px;
    }

    .speakerStrip {
        position: absolute;
        top: 0px;
        left: -1 * $speaker_p;
        width: 20 * ($speaker_w + ($speaker_p * 2));
        clear();
    }

    .speaker, .organizer {
        float: left;
        padding: 0px $speaker_p;
        text-align: center;
        width: $speaker_w;

        a.speakerImg {
            display: block;
            margin-bottom: 10px;
            img {
                width: $speaker_w;
            }
        }

        a.name, .name {
            display: block;
            font-size: 22px;
            color: $text_c;
            &:hover {
                color: $blue;
            }
            margin: 5px 0px;
        }

        div.name {
            margin-top: 15px;
            &:hover {
                color: $text_c;
            }
        }

        .projects, .keynote {
            font-size: 18px;
            color: $blue;
            text-transform: uppercase;
            line-height: 1em;
        }

        .keynote {
            bebas: 18px $blue;
            font-weight: bold;
        }

        .bio {
            font-size: $f_normal;
            margin-top: 15px;
            text-align: justify;
        }
    }

    .organizer {
        width: $speaker_w + 10px;
        padding: 0px ($speaker_p + 2px);
    }
}


.speakerSec {
    clear()
    margin-bottom: 40px;

    img {
        float: left;
        margin: 0px 30px;
    }

    .speakerInfo {
        float: left;
        width: 490px;
        position: relative;
    }

    .speakerAnchor {
        position: absolute;
        top: -15px;
        font-size: 1px;
        margin: 0px;
        padding: 0px;
        line-height: 1px;
    }

    .name {
        font-size: $f_big*1.1;
    }

    .projects {
        font-size: $f_big*0.9;
        color: $blue;
        text-transform: uppercase;
    }

    h3 {
        bebas: $f_normal $blue;
        margin: 15px 0px;
        margin-bottom: 0px;
    }

    .abstract, .bio {
        font-size: $f_normal;
    }

}

.schedule {
    $schedule_w = 700px;
    margin-left: 75px;

    .block {
        clear()
        margin-bottom: 20px;
        $time_w = 203px;
        $icon_w = 33px;
        $icon_m = 10px;
        $desc_w = $schedule_w - $time_w - $icon_w - $icon_m;

        .time {
            float: left;
            bebas: $f_big*1.15 $text_c;
            width: $time_w;
        }

        img.icon {
            float: left;
            width: $icon_w;
            margin-right: $icon_m;
        }

        .event {
            float: left;
            width: $desc_w;
            margin-top: 6px;

            .desc {
                bebas: $f_large $blue;
                margin-bottom: 0px;
                line-height: 1em;
                padding-bottom: 0px;
            }

            .topic {
                font-size: $f_big;
                margin-top: 15px;
            }

            .speakerList {
                color: $green;
                font-size: $f_normal;
                text-transform: uppercase;
                margin-bottom: 8px;
            }

        }
    }
}

.sponsorPage {
    margin-left: 40px;

    .sponsorSec {
        clear();
        margin-bottom: 30px;

        .sponsorImgSec {
            float: left;
            margin-right: 40px;
            width: 120px;

            img {
                width: 120px;
                position: relative;
                top: 5px;
            }
        }

        .sponsorDetail {
            float: left;
            width: 550px; 

            .sponsorTitle {
                font-size: $f_big;
                color: #000;
            }
        }
    }
}
